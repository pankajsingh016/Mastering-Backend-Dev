<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <span class="text-zinc-500 mb-5 inline-block text-xl">
        <a class="text-blue-400" href="/">Home</a>
      </span>
      <h1 class="text-3xl tighting-tigher mb-10">All Users</h1>
      <div class="users flex gap-4 flex-wrap">
        <% if(users.length >0) {%>
        <%users.forEach(function(user){%>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-72 bg-zinc-500 rounded-lg overflow-hidden">
            <img class="w-full h-full object-cover object-top" src="<%=user.image_url%>" alt=""/>
          </div>
          <h3 class="text-xl mt-3"><%=user.name%></h3>
          <h5 class="text-zinc-500"><%=user.email%></h5>
          <div class="flex gap-3 text-blue-400 mt-10">
            <a href="/edit/<%=user._id%>">Edit User</a>
            <a href="/delete/<%=user._id%>">Delete User</a>
          </div>
        </div>
        <%})%>
        <%} else {%>
          <h3 class="text-zinc-500">No users yet</h3>
          <% }%>
        </div>
      </div>
    </div>
  </body>
</html>
