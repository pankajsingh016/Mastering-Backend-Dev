<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"
      defer
    ></script>
    <title>Document</title>
  </head>

  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 px-[15%] text-white">
        <form action="/create" method="POST">
          <input
            class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700"
            type="text"
            placeholder="Title"
            name="title"
          />
          <textarea
            class="block w-full rounded-md outline-none px-5 py-2 mt-2 resize-none bg-zinc-700"
            placeholder="Write your task details here"
            name="details"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-lg"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks px-[10%] flex gap-3 flex-wrap">
        <% if(files.length>0){%> 
            <%files.forEach(function(val){ %>
        <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-white text-3xl tracking-tight">
            <%=val%>
          </h1>
          <a class="text-blue-500 inline-block mt-3" href="/files/<%=val%>">Read More.</a>
        </div>
        <% })} else {%> 
            <h1 class="text-zinc-500 text-3xl">No Task Created</h1>
            <%}%>
      </div>
    </div>
  </body>
</html>
